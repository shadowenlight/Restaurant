@model IEnumerable<Restaurant.Models.Reservation>

@{
    ViewBag.Title = "My Reservations";
}

<h2>My Reservations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Table Number</th>
        <th>Number of Person</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.DateTime)</td>
        <td>@Html.DisplayFor(modelitem=>item.Time)</td>
        <td>@Html.DisplayFor(modelitem=>item.Table.TableNumber)</td>
        <td>@Html.DisplayFor(modelitem=>item.NumberOfPerson)</td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReservationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ReservationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ReservationId })
        </td>
    </tr>
}

</table>
